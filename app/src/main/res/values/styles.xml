<resources>

    <!--样式定义-->
    <style name="Basic"/>
    <style name="Basic.toolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/black</item>
        <item name="titleTextAppearance">@style/Basic.titleBarTitleTextStyle</item>
        <item name="subtitleTextAppearance">@style/Basic.titleBarCenterTextStyle</item>
        <item name="android:minHeight">@dimen/action_bar_size</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="titleMargins">0dp</item>
    </style>

    <style name="Basic.titleBarCenterTextStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Basic.titleBarTitleTextStyle" parent="Basic.titleBarCenterTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="Basic.toolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:minWidth">32dp</item>
    </style>
    <style name="Basic.actionOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="Basic.TextAppearance" parent="TextAppearance.AppCompat"/>
    <style name="Basic.TextAppearance.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Basic.actionOverflowMenuStyle" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/white</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>
</resources>
